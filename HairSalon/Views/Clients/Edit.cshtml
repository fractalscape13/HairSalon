@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h2>Edit @Html.DisplayFor(model => model.Name)</h2>

<div class="box">
  @using (Html.BeginForm())
  {
    <div>
      @Html.LabelFor(model => model.Name)<br>
      @Html.TextBoxFor(model => model.Name)
    </div>
    <div>
      @Html.LabelFor(model => model.Phone)<br>
      @Html.TextBoxFor(model => model.Phone)
    </div>
    <div>
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistList",  (IEnumerable<SelectListItem>)ViewBag.StylistList)
    </div>
    <input class="btn" type="submit" value="Save changes">
  }
  <p>@Html.ActionLink("Back to client list", "Index")</p>
  <p>@Html.ActionLink("Return to homepage", "Index", "Home")</p>
</div>
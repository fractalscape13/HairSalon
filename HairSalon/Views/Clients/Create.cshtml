@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h2>Add a new client</h2>

<div class="box">
  @using (Html.BeginForm())
  {
    <div>
      @Html.LabelFor(model => model.Name)<br>
      @Html.TextBoxFor(model => model.Name)
    </div>
    <div>
      @Html.LabelFor(model => model.Phone)<br>
      @Html.TextBoxFor(model => model.Phone)
    </div>
    <div>
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId",  (IEnumerable<SelectListItem>)ViewBag.StylistId)
    </div>

    <input type="submit" value="Add client" class="btn">
  }

  <p>@Html.ActionLink("Show all clients", "Index")</p>
  <p>@Html.ActionLink("Show all stylists", "Index", "Stylists")</p>
  <p>@Html.ActionLink("Return to homepage", "Index", "Home")</p>
</div>

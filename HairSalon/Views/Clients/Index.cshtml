@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Clients</h2>

<div class="box">
  @foreach (Client client in Model)
  {
    <h4>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</h4>
  }

  @if (@Model.Count == 0)
  {
    <h4>No clients have been added yet...</h4>
  }
  else
  {
    <p class="btn">@Html.ActionLink("Add new client", "Create")</p>
  }

  <p>@Html.ActionLink("See All Stylists", "Index", "Stylists")</p>
  <p>@Html.ActionLink("Back to homepage", "Index", "Home")</p>
</div>
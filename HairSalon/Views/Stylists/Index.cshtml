@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

<div class="box">
  @if (@Model.Count == 0)
  {
    <h4> No stylists have been added yet... </h4>
  }
  @foreach (Stylist stylist in Model)
  {
    <h3> @Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId }) </h3>
  }

  <h4>@Html.ActionLink("Add Stylist", "Create", null, htmlAttributes: new {@class="btn"})</h4>
  <p>@Html.ActionLink("Back to homepage", "Index", "Home")</p>
</div>